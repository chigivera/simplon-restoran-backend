<div class="container-xxl py-5 bg-dark hero-header mb-5">
  <div class="container text-center my-5 pt-5 pb-4">
    <h1 class="display-3 text-white mb-3 animated slideInDown">Ajouter Un Repas</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb justify-content-center text-uppercase">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Contact</li>
      </ol>
    </nav>
  </div>
</div>
</div>
<section>
  <div class="container">
    <h1 id="title" class="text-center mb-5">Ajouter un Repas</h1>
    <form action="/repas/save" method="POST" enctype="multipart/form-data" class="was-validated mt-5 w-50 mx-auto"  style="max-width: 500px;">
      <div class="form-group mb-3"> <label for="id_restaurant" class="form-label">Restaurant</label> <select
          id="id_restaurant" name="id_restaurant" class="form-control" required>
          <% restaurants.forEach((restaurant)=> { %> <option value="<%= restaurant.id %>">
              <%= restaurant.email %>
            </option>
            <% }); %>
        </select> </div>
      <div class="form-group mb-3"> <label for="nom" class="form-label">Nom</label> <input type="text" name="nom"
          class="form-control" required>                <div class="valid-feedback">Looks good!</div>
        </div>
      <div class="form-group mb-3"> <label for="description" class="form-label">Description</label> <textarea
          name="description" class="form-control" required></textarea>                 <div class="valid-feedback">Looks good!</div>
        </div>
      <div class="form-group mb-3"> <label for="prix" class="form-label">Prix</label> <input type="number" name="prix"
          class="form-control" required>                 <div class="valid-feedback">Looks good!</div>
        </div>
      <div class="form-group mb-3"> <label for="url_image" class="form-label">Image</label> <input type="file"
          name="url_image" accept="image/*" class="form-control" required> </div>
      <div class="form-group mb-3"> <label for="id_categorie" class="form-label">Categorie</label> <select
          id="id_categorie" name="id_categorie" class="form-control" required>
          <% categories.forEach((categorie)=> { %> <option value="<%= categorie.id %>">
              <%= categorie.nom %>
            </option>
            <% }); %>
        </select> </div>
      <button type="submit" id="submitRepas" class="btn btn-primary">Ajouter un Repas</button>

    </form>
  </div>
</section>